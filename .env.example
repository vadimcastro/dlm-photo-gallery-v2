# Development Environment Configuration
# Copy this file to .env.development and fill in your actual values

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=dlm-photo-gallery-v2
POSTGRES_HOST=db
DATABASE_URL=postgresql://postgres:password@db:5432/dlm-photo-gallery-v2

# Redis
REDIS_URL=redis://redis:6379/0

# Security (development only - not secure)
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production

# Admin User (development)
ADMIN_EMAIL=dan@example.com
ADMIN_PASSWORD=gallery123
ADMIN_USERNAME=dan
ADMIN_NAME=Dan

# Environment
ENVIRONMENT=development
DEBUG=true

# Google Photos API Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REFRESH_TOKEN=your_refresh_token
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/callback

# Photo Album IDs (get these from Google Photos)
PORTRAITS_ALBUM_ID=your_portraits_album_id
LANDSCAPE_ALBUM_ID=your_landscape_album_id
ARCHITECTURE_ALBUM_ID=your_architecture_album_id
ABSTRACT_ALBUM_ID=your_abstract_album_id
WILDLIFE_ALBUM_ID=your_wildlife_album_id